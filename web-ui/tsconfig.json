{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "baseUrl":"http://localhost",
      "strict": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ],
    "types": [
      "typePatches","react", "react-dom"
    ]
  }