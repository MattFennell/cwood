{
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "plugins": ["typescript", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": ["warn", "always"],
    "no-undef": "off",
    "no-unused-vars": "off",
    "prettier/prettier": "error"
  }
}
